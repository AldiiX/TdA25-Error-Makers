@using Microsoft.AspNetCore.WebUtilities
@using TdA25_Error_Makers
@using TdA25_Error_Makers.Classes
@{
    var webTheme = Utilities.WebTheme.Get();
    var loggedAccountTask = Auth.ReAuthUserAsync();

    // části stránky
    var background = Html.PartialAsync("/Views/Components/BlurBackground.cshtml");
    var header = Html.PartialAsync("/Views/Components/Header.cshtml");
    var footer = Html.PartialAsync("/Views/Components/Footer.cshtml");

    string buttonLink = ViewBag.ButtonLink ?? "/";
    string errorCode = ViewBag.ErrorCode != null ? ViewBag.ErrorCode.ToString() : "500";
    string errorMessage = ViewBag.ErrorMessage ?? "Něco se pokazilo. Zkuste to prosím znovu.";
    string errorMessage2 = ViewBag.ErrorMessage2 ?? "XOXOOX";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Error@(ViewBag.ErrorCode != null ? $" {ViewBag.ErrorCode}" : "") • Think Different Academy</title> <!-- minulý rok jsme dostali minus body za to, že to bylo „Home‟ a ne „Domů‟, tak to neměňte :D  -->
    <link rel="icon" href="/favicon.ico">
    <link rel="stylesheet" href="/libs/purecss.css">
    <link rel="stylesheet" href="@Utilities.WebTheme.GetCSSFile()">
    <link rel="stylesheet" href="/css/error.css?ver=@Program.ENV.GetValueOrNull("CACHE_VERSION")">
    <link rel="stylesheet" href="/css/mainstyles.css?ver=@Program.ENV.GetValueOrNull("CACHE_VERSION")">

    @*  scripty pro komponenty *@
    <script src="/scripts/components/header.js"></script>
</head>
<body id="ERROR-PAGE">
    @await header
    @await background

    <div class="main">
        <div class="centerdiv">
            <h1 class="code">
                @errorCode[0]
                @if (errorCode[1] == '0') {
                    <div class="icon"></div>
                } else {
                    @errorCode[1]
                }
                @errorCode[2]
            </h1>
            <h1>@errorMessage</h1>
            <p>@errorMessage2</p>
            <button class="button-primary-col-sec" onclick="location.href='@buttonLink'">Zpět</button>
        </div>
    </div>

    @await footer
</body>
<script type="module">
    import * as f from "/scripts/functions.js?ver=@Program.ENV.GetValueOrNull("CACHE_VERSION")";
    window.addCookie = f.addCookie;
    if (window.history.replaceState) window.history.replaceState( null, null, window.location.href );
</script>
</html>