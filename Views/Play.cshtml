@using TdA25_Error_Makers
@using TdA25_Error_Makers.Classes
@{
    var webTheme = Utilities.WebTheme.Get();

    // části stránky
    var background = Html.PartialAsync("/Views/Components/BlurBackground.cshtml");
    var header = Html.PartialAsync("/Views/Components/Header.cshtml");
    var footer = Html.PartialAsync("/Views/Components/Footer.cshtml");
    var announcements = Html.PartialAsync("/Views/Components/AnnouncementsMain.cshtml");
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Hrát • Think Different Academy</title>
    <link rel="stylesheet" href="/libs/purecss.css">
    <link rel="stylesheet" href="/css/play.css?ver=@Program.ENV.GetValueOrNull("CACHE_VERSION")">
    <link rel="stylesheet" href="/css/mainstyles.css?ver=@Program.ENV.GetValueOrNull("CACHE_VERSION")">
    <link id="webtheme-link" rel="stylesheet" href="@Utilities.WebTheme.GetCSSFile()">


    @{ // Vue.js definice
        if (Program.DEVELOPMENT_MODE) {
            <script src="/libs/vue_dev.js"></script>
        } else {
            <script src="/libs/vue.js"></script>
        }
    }

    @*  scripty pro komponenty *@
    <script src="/scripts/components/header.js"></script>
</head>
<body id="PLAY-PAGE">

    <div id="app">
        @await announcements
        @await header
        @await background

        <div class="main">
            <div class="centerdiv" v-cloak>
                <h1 class="title" v-if="temp.selectedMode === null">Hrát</h1>
                <h1 v-if="temp.selectedMode === 'singleplayer'">Singleplayer</h1>
                <h1 v-if="temp.selectedMode === 'multiplayer' && temp.faze !== 'multiplayerModeQueue'">Multiplayer</h1>

                <!-- faze vybirani singleplayer / multiplayer -->
                <div class="first" v-if="temp.faze === 'selectSingleplayerOrMultiplayer'">
                    <div class="singleplayer" v-on:click="temp.selectedMode = 'singleplayer'; temp.faze = 'selectSingleplayerMode'">
                        <h2>Singleplayer</h2>
                        <div class="img"></div>
                    </div>
                    <div class="multiplayer" v-on:click="temp.selectedMode = 'multiplayer'; temp.faze = 'selectMultiplayerMode'">
                        <h2>Multiplayer</h2>
                        <div class="img"></div>
                    </div>
                </div>

                <!-- faze vybirani singleplayer modu -->
                <template v-if="temp.faze === 'selectSingleplayerMode'">
                    <div class="game-type-1v1" v-on:click="temp.selectedSingleplayerMode = '1v1'; locationHref('/play/singleplayer/1v1');">
                        <h2>1v1</h2>
                        <p>Zahraj si piškvorky proti kamarádovi na jednom počítači!</p>
                    </div>
                    <div class="" v-on:click="temp.selectedSingleplayerMode = 'vsai';">
                        <h2>Proti AI</h2>
                        <p>Zkusíš porazit umělou inteligenci v piškvorkách?</p>
                    </div>
                </template>

                <!-- faze vybirani multiplayer modu -->
                <template v-if="temp.faze === 'selectMultiplayerMode'">
                    <div class="" v-on:click="temp.selectedMultiplayerMode = 'freeplay'; temp.faze = 'createFreeplayLobby'; connectToMultiplayerFreeplayQueue()">
                        <h2>Freeplay</h2>
                        <p>Zahraj si piškvorkový souboj proti svýmu kamarádovi</p>
                    </div>
                    <div class="" v-on:click="temp.selectedMultiplayerMode = 'ranked'; temp.faze = 'multiplayerModeQueue'; connectToMultiplayerRankedQueue()">
                        <h2>Ranked</h2>
                        <p>Zahraj si proti náhodnému hráči a ukaž, co v tobě je</p>
                    </div>
                </template>

                <div class="mpfreeplaylobby" v-if="temp.faze === 'createFreeplayLobby'">
                    <div class="joinlobby" v-if="freeplayQueue?.account?.isOwnerOfRoom === true">
                        <p>Připoj se ke kamarádovi</p>
                        <input type="text" v-model="temp.inputLobbyCode" placeholder="Kód lobby">
                        <button v-on:click="connectToMultiplayerFreeplayQueue(temp.inputLobbyCode)">Připojit</button>
                    </div>

                    <div class="leavelobby" v-if="freeplayQueue?.account?.isOwnerOfRoom === false">
                        <p>Jsi připojen do hry s id {{ freeplayQueue?.roomNumber }}</p>
                        <button v-on:click="connectToMultiplayerFreeplayQueue()">Odpojit</button>
                    </div>

                    <div class="createlobby">
                        <p>Vytvoření hry</p>
                        <p>Kód tvojí roomky: {{ freeplayQueue?.roomNumber }}</p>
                        <div class="players">
                            <p>Připojení hráči</p>
                            <div class="player" v-for="player in freeplayQueue.players">
                                <div class="img"></div>
                                <p>{{ player.name }}</p>
                            </div>
                        </div>
                        <button v-if="freeplayQueue?.account?.isOwnerOfRoom === true" v-on:click="startFreeplayLobby()">Začít hru</button>
                        <button v-else v-on:click="startFreeplayLobby()" disabled>Začít hru</button>
                    </div>
                </div>

                <!-- faze kdy je uzivatel v queue -->
                <div class="mmqueue" v-if="temp.faze === 'multiplayerModeQueue'">
                    <div class="img"></div>
                    <h1>Hledáme soupeře proti tobě</h1>
                    <p>Mezitím, co čekáš tu pro tebe máme tip: {{ generateRandomTip() }}</p>
                </div>
            </div>
        </div>

        @await footer
    </div>
</body>
<script type="module">
    import * as f from "/scripts/functions.js?ver=@Program.ENV.GetValueOrNull("CACHE_VERSION")";
    import { vue } from "/scripts/play.js?ver=@Program.ENV.GetValueOrNull("CACHE_VERSION")";
    window.addCookie = f.addCookie;
    if (window.history.replaceState) window.history.replaceState( null, null, window.location.href );
</script>
</html>